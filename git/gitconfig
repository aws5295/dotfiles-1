[push]
  default = simple

# Add the following to your .gitconfig file.
[diff]
    tool = my_diff_meld
[difftool]
    prompt = false
[difftool "my_diff_meld"]
    cmd = meld "$LOCAL" "$REMOTE"

# Add the following to your .gitconfig file.
[merge]
  tool = my_merge_meld
  defaultToUpstream = true
  conflictstyle = diff3
[mergetool]
  keepBackup = false
[mergetool "my_merge_meld"]
    # Choose one of these 2 lines (not both!) explained below.
    # cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
    cmd = meld "$LOCAL" "$REMOTE" --diff "$BASE" "$LOCAL" --diff "$BASE" "$REMOTE" --diff "$LOCAL" "$MERGED" "$REMOTE" --diff "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"

[core]
  editor = vim
  autocrlf = input
[color]
  ui = auto
[color "diff"]
  meta = yellow
  commit = green
  frag = magenta
  old = red
  new = green
  whitespace = red reverse
[color "diff-highlight"]
  oldNormal = red
  oldHighlight = "red 52"
  newNormal = "green"
  newHighlight = "green 22"
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  untracked = cyan
[pager]
  diff = diff-so-fancy | less --tabs=4 -RFX
  show = diff-so-fancy | less --tabs=4 -RFX
[grep]
  lineNumber = true
  extendRegexp = true
[credential]
	helper = store
[rebase]
  autostash = true

[alias]
  summon = "!summon () { b=$1; git fetch origin +refs/heads/$b:refs/remotes/origin/$b $b:$b; }; summon"